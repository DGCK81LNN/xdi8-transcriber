{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": ["es2021"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [],
    "target": "es6",
    "outDir": "lib",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": true,
    "diagnostics": true,
    "listEmittedFiles": true
  }
}
