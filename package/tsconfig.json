{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "lib": ["es2021"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["mocha"],
    "target": "es6",
    "outDir": "lib",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "diagnostics": true,
    "listEmittedFiles": true
  }
}
